<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    tools:context=".CreateAccountAcitivity">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="20dp"
       android:backgroundTint="#E4DADA"
       >

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="Creating Account"
           android:textSize="30sp"
           android:id="@+id/createAccountTextViewId"
           />
   </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        >

        <ImageView
            android:layout_width="238dp"
            android:layout_height="186dp"
            android:layout_gravity="center"
            android:src="@drawable/images" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/nameEditTextId"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/emailEditTextId"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/passdEditTextId"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="20sp"
        android:id="@+id/createButtonId"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button"
        app:backgroundTint="@null"
        />

</LinearLayout>